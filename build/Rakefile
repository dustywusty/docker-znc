    # ..
  end

  # -------------------------------------------------
  # test
  # -------------------------------------------------

  task :test do
    # ..
  end
end
# Helpers
# -------------------------------------------------

def execute_command(command)
  if ENV['VERBOSE']
    sh(command)
  else
    output = `#{command} 2>&1`
    raise output unless $?.success?
  end
end

def title(title)
  cyan_title = "\033[0;36m#{title}\033[0m"
  puts
  puts "-" * 80
  puts cyan_title
  puts "-" * 80
  puts
end
